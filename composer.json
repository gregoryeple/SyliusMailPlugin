{
    "name": "gregoryeple/mail-plugin",
    "type": "sylius-plugin",
    "description": "Configure how your emails are sent by Sylius.",
    "license": "MIT",
    "authors": [
        {
            "name": "Grégory EPLE",
            "homepage": "https://github.com/gregoryeple"
        },
        {
            "name": "BeHappy Communication",
            "role": "Organization",
            "homepage": "http://www.behappycom.com",
            "email": "projets@behappycom.com"
        },
        {
            "name": "Stéphane DECOCK",
            "role": "Developer",
            "homepage": "http://www.behappycom.com",
            "email": "s.decock@behappycom.com"
        },
        {
            "name": "Jordan BAO",
            "role": "Developer",
            "homepage": "http://www.behappycom.com",
            "email": "j.bao@behappycom.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "sylius/sylius": "^1.1",
        "symfony/mailer": "^5.4"
    },
    "require-dev": {
        "behat/behat": "^3.3",
        "behat/mink": "^1.7",
        "behat/mink-browserkit-driver": "^1.3",
        "behat/mink-extension": "^2.2",
        "behat/mink-selenium2-driver": "^1.3",
        "friends-of-behat/mink-debug-extension": "^2.0",
        "friends-of-behat/symfony-extension": "^2.0",
        "friends-of-behat/variadic-extension": "^1.0",
        "phpspec/phpspec": "^7.5",
        "phpunit/phpunit": "^10.0",
        "se/selenium-server-standalone": "^2.52",
        "sylius-labs/coding-standard": "^4.0",
        "symplify/easy-coding-standard": "^9.0"
    },
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "BeHappy\\SyliusMailPlugin\\": "src/",
            "Tests\\Acme\\SyliusExamplePlugin\\": "tests/"
        }
    },
    "autoload-dev": {
        "classmap": ["tests/Application/app/AppKernel.php"]
    },
    "config": {
        "bin-dir": "bin",
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
